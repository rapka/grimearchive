	div.footer
		script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js')
		script(type='text/javascript').

			var updateQuote = function(event) {
				$.ajax({
					url: '/quote',
					type: 'GET',
					success: function(data){
					var oldquote = $('.quote').text();
					var newquote = '"' + data + '"';
					$('.quote').text(newquote);

					//re-run to avoid not sending a new quote
					if (newquote == oldquote){
						updateQuote();
						}
					}
				});
			}

			$(function(){
				updateQuote();
				$('.quote').on('click', updateQuote);
			});
